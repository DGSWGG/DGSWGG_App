<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DGSWgg_App" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main</item>
        <item name="colorPrimaryVariant">@color/main</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main</item>
        <item name="colorSecondaryVariant">@color/main</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/background</item>
        <item name="android:windowAnimationStyle">@style/Theme.Activity.SlideAnimation</item>
    </style>


    <style name="Theme.Text.Title" parent="Theme.Text">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.Text.Title.Bold" parent="Theme.Text.Title">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Text.Big" parent="Theme.Text">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.Text.Big.Bold" parent="Theme.Text.Big">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Text" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.Text.Bold" parent="Theme.Text">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Text.Small" parent="Theme.Text">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.Text.Small.Bold" parent="Theme.Text.Small">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Text.Smallest" parent="Theme.Text">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.Text.Smallest.Bold" parent="Theme.Text.Smallest">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Activity.SlideAnimation" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="Theme.AppSplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/main</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo</item>
        <item name="splashScreenIconSize">10dp</item>
        <item name="postSplashScreenTheme">@style/Theme.DGSWgg_App</item>
        <item name="android:statusBarColor">@color/main</item>
    </style>

    <style name="Theme.Toolbar.NavigationIcon" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="navigationIcon">@drawable/ic_arrow_light</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Theme.BottomNavigationView" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="itemIconTint">@color/color_enabled_selector</item>
        <item name="itemTextColor">@color/color_enabled_selector</item>
        <item name="itemTextAppearanceActive">@style/Theme.BottomNavigationView.TextAppearanceActive</item>
        <item name="itemTextAppearanceInactive">@style/Theme.BottomNavigationView.TextAppearanceInactive</item>
    </style>

    <style name="Theme.Button" parent="ThemeOverlay.Material3.Button">
        <item name="android:background">@color/color_button_clicked</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Theme.Title.Button" parent="Theme.Button">
        <item name="android:background">@drawable/bg_title_button</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.Input" parent="Theme.Button">
        <item name="android:background">@drawable/bg_search_button</item>
        <item name="android:elevation">0dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/disabled</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="Theme.Search.Background" parent="Theme.Input">
        <item name="android:background">@drawable/bg_search_button_night</item>
        <item name="android:elevation">0dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textColor">@color/disabled</item>
        <item name="android:drawableStart">@drawable/ic_search_night</item>
    </style>

    <style name="Theme.Search.EditText" parent="Theme.Search.Background">
        <item name="android:background">@drawable/bg_search_input_night</item>
    </style>

    <style name="Theme.FloatingActionButton" parent="ThemeOverlay.Material3.FloatingActionButton.Primary">
        <item name="maxImageSize">30dp</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="Theme.BottomNavigationView.TextAppearanceActive">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Theme.BottomNavigationView.TextAppearanceInactive">
        <item name="android:textSize">10sp</item>
    </style>
</resources>